<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:tools="http://schemas.android.com/tools"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        android:orientation="vertical"
        android:id="@+id/main"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        tools:context=".RegisterPokemonActivity">

    <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Add Pokemon"
            android:textSize="24sp"
            android:layout_gravity="center"
            android:layout_marginTop="35dp" />

    <EditText
            android:id="@+id/et_pokemon_name"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:hint="Pokemon Name"
            android:layout_marginHorizontal="26dp"
            android:layout_marginTop="35dp"
            android:inputType="text" />

    <EditText
            android:id="@+id/et_pokemon_number"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:hint="Pokemon Number"
            android:layout_marginHorizontal="26dp"
            android:layout_marginTop="26dp"
            android:inputType="number" />

    <ImageView
            android:layout_width="100dp"
            android:layout_height="100dp"
            android:id="@+id/iv_pokemon_thumbnail"
            android:layout_gravity="center"
            android:scaleType="centerCrop"
            android:layout_marginTop="26dp" />

    <Button
            android:id="@+id/btn_select_image"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Select Image"
            android:layout_gravity="center"
            android:backgroundTint="@color/design_default_color_background"
            android:layout_marginTop="14dp"
            android:textColor="@color/design_default_color_primary"
            />

    <Button
            android:id="@+id/btn_save_pokemon"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Save Pokemon"
            android:layout_gravity="center"
            android:layout_marginTop="26dp" />


</LinearLayout>